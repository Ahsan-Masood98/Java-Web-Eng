	<% out.print("Printing using Scriplets in jsp"); %>
	<br>
	<% 
		int row=6;
		for(int i=0; i< row; i++){
			for(int k=0; k<=i; k++)
				out.println("* ");
			out.print("<br/>");
		}
		out.print("<br/>");
	%>
	<%
	for (int i = 1; i <= 6; i++) {
        for (int j = 1; j <= 6 - i; j++) {
            out.print(" ");
        }
        for (int j = 1; j <= i * 2 - 1; j++) {
            out.print("*");
        }
        out.println("<br>");
    }

    for (int i = 6 - 1; i > 0; i--) {
        for (int j = 1; j <= j - i; j++) {
            out.print("<p>_<p>");
        }
        for (int j = 1; j <= i * 2 - 1; j++) {
        	out.print("*");
        }
        out.println("<br>");
    }
	%>
	
